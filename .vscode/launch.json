    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: chainlit",
            "type": "debugpy",
            "request": "launch",
            "module": "chainlit",
            "env": {
                "CHAINLIT_APP": "app.py",
                "CHAINLIT_DEBUG": "1"
            },
            "args": [
                "run",
                "app.py"
            ],
            "jinja": true,
            "autoStartBrowser": true
        }
    ]
}